<div class="row">
  <div class="col-md-12">
    <% if flash[:success] %>
        <div class="alert alert-success"><%= flash[:success] %></div>
    <% end %>
    <% if flash[:error] %>
        <div class="alert alert-danger"><%= flash[:error] %></div>
    <% end %>
    <% if flash[:results] %>
        <div class="alert alert-success"><%= flash[:results] %></div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= form_tag({controller: "survey", action: "submit"}, method: "post") do %>
      <% @questions.each do |q| %>
        <%= render partial: 'question', :locals => {:position => q.position, :qid => q.id, :questionTitle => q.question_title, :answers => q.answers} %>
      <% end %>
    <br />
      <%= submit_tag "Submit", class: "btn btn-success btn-lg btn-block" %>
    <% end %>
  </div>
</div>
