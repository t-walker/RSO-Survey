<div class="row">
  <div class="col-md-12">
    <% if flash[:success] %>
        <div class="alert alert-success"><%= flash[:success] %></div>
    <% end %>
    <% if flash[:error] %>
        <div class="alert alert-danger"><%= flash[:error] %></div>
    <% end %>
  </div>
</div>
<%= form_tag({controller: "survey", action: "modify_question"}, method: "put") do %>
  <div class="form-group row">
    <%= label_tag :question_title, "Question: ", class: "col-2 col-form-label"%>
    <div class="col-10">
      <%= text_field_tag :question_title, @q.question_title, class: "form-control", type: "text" %>
    </div>
  </div>
  <div class="form-group row">
    <%= label_tag :position, "Position: ", class: "col-2 col-form-label"%>
    <div class="col-10">
      <%= text_field_tag :position, @q.position, class: "form-control", type: "number" %>
    </div>
  </div>
  <div class="btn-group">
    <%= button_tag(type:"submit", class: "btn btn-success") do %>
      <i class="fa fa-check" aria-hidden="true"></i>
      Update Question
    <% end %>
    <%= form_tag({controller: "survey", action: "delete_question"}, method: "post") do%>
      <%= hidden_field_tag :id, @q.id %>
      <%= button_tag(type: "submit", class: "btn btn-danger") do %>
        <i class="fa fa-trash-o" aria-hidden="true"></i>
        Delete Question
      <% end %>
    <% end %>
  </div>
<% end %>




<br />

<div class="row">
  <div class="col-md-12">
    <%= render partial: 'answer_keyword', :locals => {:q => @q} %>
  </div>
</div>
