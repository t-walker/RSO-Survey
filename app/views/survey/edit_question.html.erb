<div class="row">
  <div class="col-md-12">
    <% if flash[:success] %>
        <div class="alert alert-success"><%= flash[:success] %></div>
    <% end %>
    <% if flash[:error] %>
        <div class="alert alert-danger"><%= flash[:error] %></div>
    <% end %>
  </div>
</div>
<%= form_tag({controller: "survey", action: "modify_question"}, method: "patch", id: "modify_question") do %>
  <div class="row">
    <div class="col-md-12">
      <%= hidden_field_tag :id, @q.id %>
      <div class="form-group row">
        <%= label_tag :question_title, "Question: ", class: "col-md-2 col-form-label"%>
        <div class="col-md-10">
          <%= text_field_tag :question_title, @q.question_title, class: "form-control", type: "text" %>
        </div>
      </div>
      <div class="form-group row">
        <%= label_tag :position, "Position: ", class: "col-md-2 col-form-label"%>
        <div class="col-md-10">
          <%= text_field_tag :position, @q.position, class: "form-control", type: "number" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="btn-group">

       <%= button_tag 'modify_question', :name => 'update_question', :class => "btn btn-success" do %>
          <i class="fa fa-check" aria-hidden="true"></i>
          Update
        <% end %>
        <%= button_tag 'delete_question', :name => 'delete_question', :class => "btn btn-danger " do %>
          <i class="fa fa-trash-o" aria-hidden="true"></i>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <br />

  <div class="row">
    <div class="col-md-12">
      <%= render partial: 'answer_keyword', :locals => {:q => @q} %>
    </div>
  </div>
<% end %>
