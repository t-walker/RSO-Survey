<div class="row">
  <div class="col-md-12">
    <h3>Survey Questions</h3>
    <p>These are the questions on the form.</p>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <% if flash[:success] %>
        <div class="alert alert-success"><%= flash[:success] %></div>
    <% end %>
    <% if flash[:error] %>
        <div class="alert alert-danger"><%= flash[:error] %></div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= link_to "Add a question", {controller: "survey", action: "new_question"}, class: "btn btn-success" %>
    <table class="table table-striped table-hover table-bordered">
      <thead class="table-danger">
        <th>Question</th>
        <th>Position</th>
        <th>Edit</th>
      </thead>
      <tbody class="table-info">
        <% @questions.each do |q| %>
          <tr>
            <td><%= q.question_title %></td>
            <td><%= q.position %></td>
            <td>
              <%= button_to "/survey/question/" + q.id.to_s, :method => :get, :class => "btn btn-block btn-success" do %>
                <i class="fa fa-edit" aria-hidden="true"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
