<div class="row">
  <div class="col-md-12">
    <% if flash[:success] %>
        <div class="alert alert-success"><%= flash[:success] %></div>
    <% end %>
    <% if flash[:error] %>
        <div class="alert alert-danger"><%= flash[:error] %></div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h3>Create a new officer</h3>
    <%= form_tag({controller: "officer", action: "create_officer"}, method: "post") do %>
      <div class="form-group row">
        <%= label_tag :first, "First name:", class: "col-2 col-form-label" %>
        <div class="col-5">
          <%= text_field_tag :first, "", class: "form-control", type: "text" %>
        </div>
      </div>
      <div class="form-group row">
        <%= label_tag :last, "Last name:", class: "col-2 col-form-label" %>
        <div class="col-5">
          <%= text_field_tag :last, "", class: "form-control", type: "text" %>
        </div>
      </div>
      <div class="form-group row">
        <%= label_tag :email, "Email:", class: "col-2 col-form-label" %>
        <div class="col-5">
          <%= text_field_tag :email, "", class: "form-control", type: "email" %>
        </div>
      </div>
      <div class="form-group row">
        <%= label_tag :phone, "Phone:", class: "col-2 col-form-label" %>
        <div class="col-5">
          <%= text_field_tag :phone, "", class: "form-control", type: "phone" %>
        </div>
      </div>
      <%= submit_tag "Create Officer", class: "btn btn-success" %>
    <% end %>
  </div>
</div>

<div class="row" style="margin-top: 30px">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <th>Officer Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th></th>

      </thead>
      <% @officers.each do |o| %>
        <%= render partial: "officer", :locals => {:o => o} %>
      <% end %>
  </div>
</div>
