<div class="col-md-6 d-flex align-items-stretch" style="margin-bottom: 20px;">
    <div class="card">
        <div class="card-header">
            <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="row">
                        <%= label_tag "new_answer_title", "Answer: ", class: "col-lg-2 col-form-label" %>
                        <div class="col-lg-10">
                        <%= text_field_tag "new_answer_title", "", class: "form-control", type: "text"%>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <%= label_tag "new_answer_position", "Position: ", class: "col-lg-2 col-form-label" %>
                        <div class="col-lg-10">
                        <%= text_field_tag "new_answer_position", "", class: "form-control", type: "number"%>
                        </div>
                    </div>
                </div>
            </div>
            </div>
            <div class="btn-group">
            <%= button_tag 'modify_question', :name => 'add_answer', :class => "btn btn-success" do %>
                <i class="fa fa-plus" aria-hidden="true"></i>
            <% end %>
            </div>
        </div>
    </div>
</div>
